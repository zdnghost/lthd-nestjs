{{!-- Yêu cầu: game (object) và index (số) --}}
<div class="game-card-item opacity-0 transform translate-y-4 transition duration-500 ease-out" 
     style="transition-delay: {{index}}ms;">
    
    <a href="/games/{{game.id}}/detail" 
        class="block bg-gray-800 rounded-xl shadow-xl overflow-hidden 
               border-2 border-transparent hover:border-red-600 
               transform transition-all duration-300 hover:scale-[1.03] hover:shadow-red-900/50">

        <div class="relative">
            <img src="{{game.imageUrl}}" alt="{{game.name}}" 
                 onerror="this.onerror=null; this.src='https://via.placeholder.com/400x225?text=Game+Image';"
                 class="w-full h-48 object-cover object-center">
            
            <span class="absolute top-3 right-3 px-3 py-1 text-xs font-bold 
                         bg-red-600 text-white rounded-full shadow-md">
                {{game.offers.length}} Offers
            </span>
        </div>

        <div class="p-4">
            <h3 class="text-xl font-bold text-white mb-2 truncate">
                {{game.name}}
            </h3>
            
            <p class="text-sm text-gray-400 mb-3">{{game.platforms}}</p>

            <div class="flex items-center justify-between">
                <p class="text-lg font-bold text-green-400">
                    Giá tốt nhất: 
                </p>
                <span class="text-2xl font-extrabold text-green-400">
                    $19.99 </span>
            </div>
            
            <form method="post" action="/games/{{game.id}}/delete" class="mt-4">
                <button type="submit" onclick="return confirm('Xóa game này?')"
                        class="w-full py-2 bg-gray-700 text-red-400 font-semibold rounded-lg 
                               hover:bg-red-700 hover:text-white transition duration-300">
                    Xóa khỏi danh sách
                </button>
            </form>
        </div>
    </a>
</div>