<!doctype html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <title>{{title}}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    
    <script src="https://cdn.jsdelivr.net/npm/swup@latest/dist/swup.min.js"></script>

    <link rel="stylesheet" href="../style/styles.css" /> 
</head>

<body class="bg-gray-900 min-h-screen text-gray-100 flex flex-col">
    {{> header}}
    
    <main id="swup" class="container mx-auto p-4 flex-grow transition-opacity duration-300">
        {{{body}}}
    </main>
    
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const swup = new Swup({
                // Chỉ định container chứa nội dung sẽ thay đổi
                containers: ['#swup'],
                // Bỏ qua các liên kết đến file (ví dụ: .pdf) hoặc các liên kết có thuộc tính data-no-swup
                skipPopStateOnTarget: false
            });

            // Tùy chọn: Thêm hiệu ứng cho header (nếu header có liên kết)
            // Cần đảm bảo các liên kết trong {{> header}} trỏ đến các trang dùng main.hbs
        });
    </script>
</body>

</html>